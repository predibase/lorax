{
    "editor.rulers": [
        120
    ],
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length",
        "120"
    ],
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E203,W503"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": false,
    "python.envFile": "${workspaceFolder}/.env",
    "files.associations": {
        "__hash_table": "cpp",
        "__split_buffer": "cpp",
        "__tree": "cpp",
        "array": "cpp",
        "bitset": "cpp",
        "deque": "cpp",
        "initializer_list": "cpp",
        "iterator": "cpp",
        "list": "cpp",
        "map": "cpp",
        "queue": "cpp",
        "random": "cpp",
        "stack": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "unordered_map": "cpp",
        "utility": "cpp",
        "vector": "cpp",
        "filesystem": "cpp",
        "fstream": "cpp",
        "istream": "cpp",
        "locale": "cpp",
        "streambuf": "cpp",
        "*.tcc": "cpp",
        "compare": "cpp",
        "cstdlib": "cpp",
        "numeric": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "atomic": "cpp",
        "__locale": "cpp",
        "ios": "cpp"
    }
}